<section class="text-gray-600 body-font overflow-hidden">
  <div class="container px-5 py-24 mx-auto">
    <div class="lg:w-4/5 mx-auto flex flex-wrap">
      <div class="bg-indigo-300/10 p-6 lg:w-1/2 lg:h-auto h-56 object-cover object-center rounded-lg overflow-hidden">
      <%= image_tag @template.template_file, :class => "h-56 object-scale-down mx-auto shadow-lg" unless @template.template_file.nil? %>
      </div>
      <div class="lg:w-1/2 w-full lg:pl-10 lg:py-6 mt-6 lg:mt-0">
        <h1 class="text-gray-900 text-3xl title-font font-medium mb-1"><%= @template.title %></h1>
        <p class="leading-relaxed"><%= @template.description %></p>
        <div class="flex">
          <button class="flex ml-auto text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded">Generate</button>
        </div>
      </div>
    </div>
  </div>
</section>